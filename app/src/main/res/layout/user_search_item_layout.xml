<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_search"
        android:layout_width="48dp"
        android:layout_centerVertical="true"
        android:layout_height="48dp"
        android:src="@drawable/profile"
        />

    <TextView
        android:id="@+id/username_text_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="user name"
        android:layout_toRightOf="@id/profile_image_search"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="12dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_online"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:civ_border_width="6dp"
        app:civ_border_color="#03991c"
        android:src="@drawable/profile"
        android:layout_below="@id/username_text_search"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/profile_image_search"
        android:visibility="gone"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_offline"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:civ_border_width="6dp"
        app:civ_border_color="#E5E5E5"
        android:src="@drawable/profile"
        android:layout_below="@id/username_text_search"
        android:layout_marginLeft="-15dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/profile_image_search"
        />

    <TextView
        android:id="@+id/poslednaPorakaTekst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_image_search"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="12dp"
        android:textSize="13sp"
        android:maxLines="1"
        android:text="dim dim dim"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/username_text_search"
        />

    <TextView
        android:id="@+id/poslednaPorakaVreme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:textSize="14sp"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/colorLight"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/slika_neprocitano"
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/purple_500"
        android:layout_marginTop="10dp"
        android:src="@drawable/profile"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        />


</RelativeLayout>