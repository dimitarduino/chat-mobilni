<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/porakaRelative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginVertical="3dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilnaKorisnik"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            android:visibility="gone"></de.hdodenhof.circleimageview.CircleImageView>


        <RelativeLayout
            android:id="@+id/sodrzinaRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pratenaSlika"
                android:maxWidth="200dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:minHeight="100dp"
                android:adjustViewBounds="true"
                android:background="@color/inputBackground"
                android:layout_alignParentRight="true"
                ></ImageView>
        </RelativeLayout>
        
        <TextView
            android:id="@+id/seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sodrzinaRelative"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:text=""
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</RelativeLayout>