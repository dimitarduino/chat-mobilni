<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginVertical="5dp"
        android:layout_height="wrap_content">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profilnaKorisnik"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            android:visibility="gone"
            >
        </de.hdodenhof.circleimageview.CircleImageView>
        <TextView
            android:id="@+id/tekstPoraka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello friend!"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:background="@drawable/sent_message_bg"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/pratenaSlika"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            >
        </ImageView>

        <TextView
            android:id="@+id/text_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tekstPoraka"
            />

    </RelativeLayout>
</RelativeLayout>